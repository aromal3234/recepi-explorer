<div class="auth-page">
  <div class="auth-card">
    <header class="auth-header">
      <h2>Welcome back</h2>
      <p class="muted">Log in to access your saved recipes and favorites.</p>
    </header>

    <form id="loginForm" action="/login" method="post" class="auth-form">
      {{#if error}}
        <div class="form-error">{{error}}</div>
      {{/if}}
      <div class="form-field">
        <label for="email">Email</label>
        <input id="email" name="email" type="email" placeholder="you@example.com" required />
      </div>

      <div class="form-field">
        <label for="password">Password</label>
        <div class="password-row">
          <input id="password" name="password" type="password" placeholder="Enter your password" required />
          <button type="button" class="show-pass" data-target="#password">Show</button>
        </div>
      </div>

      <div class="form-actions">
        <button type="submit" class="btn primary">Log in</button>
        <a class="link forgot" href="#">Forgot?</a>
      </div>
    </form>

    <footer class="auth-footer">
      <p>Don't have an account? <a href="/signup">Create one</a></p>
    </footer>
  </div>
</div>
