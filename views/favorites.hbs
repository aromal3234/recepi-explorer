<a href="/" class="back-link">&larr; Back to Home</a>
<div class="favorites-container">
  <h1 class="favorites-title">Your Favorite Recipes</h1>
  {{#if favorites.length}}
    <div class="card-grid one-col">
      {{#each favorites}}
        <div class="recipe-card">
          <a href="/recipe/{{this.recipeId}}" class="card-image-link">
            {{#if this.image}}
              <img src="{{this.image}}" alt="{{this.name}}" class="card-image" />
            {{/if}}
          </a>
          <div class="card-body">
            <a href="/recipe/{{this.recipeId}}" class="card-title">{{this.name}}</a>
          </div>
        </div>
      {{/each}}
    </div>
  {{else}}
    <p class="no-favorites">You have no favorite recipes yet.</p>
  {{/if}}
</div>

<style>
.favorites-container {
  max-width: 600px;
  margin: 40px auto;
  padding: 24px;
  background: #fff;
  border-radius: 12px;
  box-shadow: 0 2px 16px rgba(0,0,0,0.08);
}
.favorites-title {
  text-align: center;
  font-size: 2rem;
  margin-bottom: 24px;
}
.card-grid.one-col {
  display: flex;
  flex-direction: column;
  gap: 28px 0;
}
.recipe-card {
  background: #fff;
  border-radius: 12px;
  box-shadow: 0 2px 12px rgba(0,0,0,0.07);
  overflow: hidden;
  display: flex;
  flex-direction: column;
  transition: box-shadow .18s;
}
.recipe-card:hover {
  box-shadow: 0 6px 24px rgba(0,0,0,0.13);
}
.card-image-link {
  display: block;
  width: 100%;
  height: 180px;
  overflow: hidden;
}
.card-image {
  width: 100%;
  height: 100%;
  object-fit: cover;
  display: block;
}
.card-body {
  padding: 16px 16px 8px 16px;
  flex: 1;
}
.card-title {
  font-size: 1.18rem;
  font-weight: 600;
  color: #2d2d2d;
  text-decoration: none;
  margin-bottom: 8px;
  display: block;
}
.no-favorites {
  text-align: center;
  color: #888;
  font-size: 1.1rem;
}
.back-link {
  display: inline-block;
  margin-bottom: 18px;
  color: #007bff;
  text-decoration: none;
  font-weight: 500;
}
.back-link:hover {
  text-decoration: underline;
}
</style>
